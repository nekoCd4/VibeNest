<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VibeNest - 2FA</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#121212] text-gray-100">

  <%- include('partials/header') %>

  <div style="display:flex;align-items:center;justify-content:center;min-height:calc(100vh - 96px);padding:28px">
    <div class="w-full max-w-md p-8 space-y-8 bg-black/70 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center">Two-Factor Authentication</h1>

    <% if (error) { %>
      <div class="text-center font-medium text-red-500"><%= error %></div>
    <% } %>

    <div class="space-y-6">
      <% if (twoFactorMethod === 'authenticator') { %>
        <div class="p-6 border border-gray-700 rounded-lg space-y-4">
          <h2 class="text-xl font-semibold text-center">Authenticator App</h2>
          <p class="text-gray-400 text-sm text-center">
            Enter the 6-digit code from your authenticator app.
          </p>
             <form action="/2fa-login" method="POST" class="space-y-4">
               <input type="text" 
                 name="token" 
                 placeholder="Enter 6-digit code from app" 
                 maxlength="6"
                 class="w-full px-4 py-2 text-gray-900 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
               <div class="small muted" style="text-align:center">Or use a single-use backup / recovery code if you can't access your authenticator</div>
               <input type="text" 
                 name="backupCode" 
                 placeholder="Backup code (eg. XXXX-XXXX)" 
                 maxlength="16"
                 class="w-full px-4 py-2 text-gray-900 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="submit" 
                    class="w-full px-4 py-2 font-bold text-white bg-green-600 rounded-md hover:bg-green-700 transition">
              Verify Code
            </button>
          </form>
        </div>
        <% if (typeof debugCode !== 'undefined' && debugCode) { %>
          <div class="text-center mt-4 text-sm text-yellow-300">Development code: <strong><%= debugCode %></strong></div>
        <% } %>
      <% } else if (twoFactorMethod === 'email') { %>
        <div class="p-6 border border-gray-700 rounded-lg space-y-4">
          <h2 class="text-xl font-semibold text-center">Email Verification</h2>
          <p class="text-gray-400 text-sm text-center">
            A one-time code has been sent to your email.
          </p>
          <% if (emailDeliveryFailed) { %>
            <div class="text-center text-sm" style="color:var(--danger);font-weight:700;margin-bottom:8px">Email not sent — check server logs or mail configuration</div>
          <% } %>
          <form id="email-2fa-form" action="/2fa-verify-email" method="POST" class="space-y-4">
            <input type="text" 
                   name="emailToken" 
                   placeholder="Enter code from email" 
                   required 
                   maxlength="6"
                   class="w-full px-4 py-2 text-gray-900 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="submit" 
                    class="w-full px-4 py-2 font-bold text-white bg-green-600 rounded-md hover:bg-green-700 transition">
              Verify Code
            </button>
          </form>
          <% if (typeof debugCode !== 'undefined' && debugCode) { %>
            <div class="text-center mt-2 text-sm text-yellow-300">Development code: <strong><%= debugCode %></strong></div>
          <% } %>
          <div class="grid gap-2">
            <button id="resend-email-code" 
                    type="button"
                    class="w-full text-sm text-gray-400 mt-2 hover:underline">
              Resend code
            </button>
            <button id="reset-2fa" 
                    type="button"
                    class="w-full text-sm text-red-400 mt-1 hover:underline">
              Reset account & resend verification email
            </button>
          </div>
        </div>
      <% } else if (twoFactorMethod === 'magic_link') { %>
        <div class="p-6 border border-gray-700 rounded-lg space-y-4">
          <h2 class="text-xl font-semibold text-center">Magic Link</h2>
          <p class="text-gray-400 text-sm text-center">
            Click the button below to send a secure login link to your email.
          </p>
          <button id="send-magic-link" 
                  class="w-full px-4 py-2 font-bold text-white bg-blue-600 rounded-md hover:bg-blue-700 transition">
            Send Magic Link
          </button>
          <p class="text-gray-400 text-xs text-center mt-4">
            The link will be valid for 15 minutes. Check your email and click the link to complete login.
          </p>
        </div>
      <% } else if (twoFactorMethod === 'webauthn') { %>
        <div class="p-6 border border-gray-700 rounded-lg space-y-4">
          <h2 class="text-xl font-semibold text-center">Fingerprint / FaceID</h2>
          <button id="webauthn-start-login" 
                  class="w-full px-4 py-2 font-bold text-white bg-purple-600 rounded-md hover:bg-purple-700 transition">
            Login with Biometrics
          </button>
        </div>
      <% } %>
    </div>

    <div class="text-center mt-4">
      <a href="/login" class="text-blue-400 hover:underline">Back to Login</a>
    </div>

    <div style="max-width:420px;margin:18px auto;text-align:center">
      <hr style="margin:18px 0;border:none;border-top:1px solid rgba(255,255,255,0.06)">
      <p class="text-sm text-gray-400">Have a single-use backup code instead?</p>
      <form action="/2fa-verify-backup" method="POST" style="display:flex;gap:8px;align-items:center;justify-content:center;margin-top:8px">
        <input name="backupCode" placeholder="Enter backup code" required maxlength="32" class="w-[60%] px-3 py-2 rounded-md bg-gray-200 text-gray-900 border border-gray-400" />
        <button type="submit" class="px-4 py-2 rounded-md bg-yellow-500 text-black font-semibold hover:bg-yellow-600">Use code</button>
      </form>
    </div>
  </div>

  <script src="/js/webauthn.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const btn = document.getElementById('resend-email-code');
      if (btn) {
        btn.addEventListener('click', async () => {
          btn.disabled = true;
          btn.textContent = 'Resending...';
          try {
            const resp = await fetch('/2fa-resend', { method: 'POST' });
            if (resp.ok) {
              btn.textContent = 'Code resent';
              setTimeout(() => { btn.textContent = 'Resend code'; btn.disabled = false; }, 3000);
            } else {
              btn.textContent = 'Error';
              btn.disabled = false;
            }
          } catch (e) {
            btn.textContent = 'Error';
            btn.disabled = false;
          }
        });
      }

      const magicBtn = document.getElementById('send-magic-link');
      if (magicBtn) {
        magicBtn.addEventListener('click', async () => {
          magicBtn.disabled = true;
          magicBtn.textContent = 'Sending...';
          try {
            const resp = await fetch('/api/2fa/send-magic-link', { 
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ userId: '<%= userId %>' })
            });
            if (resp.ok) {
              magicBtn.textContent = 'Link sent! Check your email.';
              magicBtn.className = 'w-full px-4 py-2 font-bold text-white bg-green-600 rounded-md';
            } else {
              magicBtn.textContent = 'Error sending link';
              magicBtn.disabled = false;
            }
          } catch (e) {
            magicBtn.textContent = 'Error';
            magicBtn.disabled = false;
          }
        });
      }

      const resetBtn = document.getElementById('reset-2fa');
      if (resetBtn) {
        resetBtn.addEventListener('click', async () => {
          if (!confirm('This will clear your 2FA setup and send a new verification email to your account. Continue?')) return;
          resetBtn.disabled = true;
          resetBtn.textContent = 'Resetting...';
          try {
            const resp = await fetch('/2fa-reset', { method: 'POST' });
            const json = await resp.json().catch(() => null);
            if (resp.ok && json && json.success) {
              resetBtn.textContent = 'Verification sent — check your email';
              resetBtn.className = 'w-full text-sm text-green-400 mt-1';
              setTimeout(() => { resetBtn.textContent = 'Reset account & resend verification email'; resetBtn.disabled = false; resetBtn.className='w-full text-sm text-red-400 mt-1 hover:underline'; }, 5000);
              // Optionally redirect to check-email page
              setTimeout(() => { window.location = '/check-email?email=' + encodeURIComponent('<%= (typeof debugCode !== "undefined" && debugCode) ? "" : "" %>'); }, 1200);
            } else {
              resetBtn.textContent = (json && json.error) ? json.error : 'Error';
              resetBtn.disabled = false;
            }
          } catch (e) {
            resetBtn.textContent = 'Error';
            resetBtn.disabled = false;
          }
        });
      }
    });
  </script>
  <script src="/js/theme-toggle.js"></script>
</body>
</html>
