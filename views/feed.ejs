<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VibeNest - Feed</title>
    <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <%- include('partials/header') %>
    

    <div class="container">
        <% if (!user) { %>
            <div class="empty-state">
                <p>Sign in to see the feed and share your moments!</p>
                <a href="/login" class="btn btn-primary">Sign In</a>
            </div>
        <% } else if (posts && posts.length === 0) { %>
            <div class="empty-state">
                <p>No photos yet. Be the first to upload!</p>
                <a href="/upload" class="btn btn-primary">Upload Photo</a>
            </div>
        <% } else if (posts) { %>
            <% posts.forEach(post => { %>
                <div class="feed-item" data-post-id="<%= post.id %>" data-type="<%= post.type %>">
                    <div class="photo-header">
                        <div class="user-info">
                            <div class="avatar"><%= (post.displayName || post.username || '?')[0]?.toUpperCase() %></div>
                            <div class="user-details">
                                <h3><%= post.displayName %></h3>
                                <p>@<%= post.username %></p>
                            </div>
                        </div>
                    </div>

                    <% if (post.type === 'photo') { %>
                        <img src="/uploads/<%= post.filename %>" alt="<%= post.caption %>" class="photo-image">
                    <% } else if (post.type === 'video') { %>
                        <video src="/uploads/<%= post.filename %>" class="photo-image" controls></video>
                    <% } %>

                    <% if (post.caption) { %>
                        <div class="photo-caption"><%= post.caption %></div>
                    <% } %>

                    <div class="photo-actions">
                        <button class="action-btn like-btn" data-post-id="<%= post.id %>" data-type="<%= post.type %>">
                            <span>‚ù§Ô∏è</span>
                            <span class="like-count"><%= post.likes || 0 %> likes</span>
                        </button>
                        <button class="action-btn comment-btn-open">
                            <span>üí¨</span>
                            <span>Comment</span>
                        </button>
                    </div>

                    <div class="comments-section" style="display: none;">
                        <div class="comments-list"></div>
                        <div class="comment-form">
                            <input type="text" class="comment-input" placeholder="Add a comment..." aria-label="Add a comment">
                            <button class="comment-btn">Post</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <script>
        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const postId = this.dataset.postId;
                const type = this.dataset.type; // 'photo' or 'video'
                const endpointType = type === 'video' ? 'videos' : 'photos';
                const response = await fetch(`/api/${endpointType}/${postId}/like`, { method: 'POST' });
                const data = await response.json();
                if (data.success) {
                    this.classList.toggle('liked');
                    this.querySelector('.like-count').textContent = data.likes + ' likes';
                }
            });
        });

        document.querySelectorAll('.comment-btn-open').forEach(btn => {
            btn.addEventListener('click', function() {
                const section = this.closest('.feed-item').querySelector('.comments-section');
                section.style.display = section.style.display === 'none' ? 'block' : 'none';
            });
        });

        document.querySelectorAll('.comment-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const input = this.previousElementSibling;
                const text = input.value;
                if (!text.trim()) return;

                const feedItem = this.closest('.feed-item');
                const postId = feedItem.dataset.postId;
                const type = feedItem.dataset.type;
                const endpointType = type === 'video' ? 'videos' : 'photos';
                const response = await fetch(`/api/${endpointType}/${postId}/comment`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ text })
                });

                if (response.ok) {
                    input.value = '';
                    location.reload(); // Reload to show new comment
                }
            });
        });
    </script>
    <script src="/js/theme-toggle.js"></script>
</body>
</html>
