<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VibeNest - Feed</title>
    <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <%- include('partials/header') %>
    

    <div class="container">
        <% if (!user) { %>
            <div class="empty-state">
                <p>Sign in to see the feed and share your moments!</p>
                <a href="/login" class="btn btn-primary">Sign In</a>
            </div>
        <% } else if (posts && posts.length === 0) { %>
            <div class="empty-state">
                <p>No photos yet. Be the first to upload!</p>
                <a href="/upload" class="btn btn-primary">Upload Photo</a>
            </div>
        <% } else if (posts) { %>
            <% posts.forEach(post => { %>
                <div class="feed-item" data-post-id="<%= post.id %>" data-type="<%= post.type %>">
                    <div class="photo-header">
                        <div class="user-info">
                            <div class="avatar"><%= (post.displayName || post.username || '?')[0]?.toUpperCase() %></div>
                            <div class="user-details">
                                <h3><%= post.displayName %></h3>
                                <p>@<%= post.username %></p>
                            </div>
                        </div>
                    </div>

                    <% if (post.type === 'photo') { %>
                        <img src="/uploads/<%= post.filename %>" alt="<%= post.caption %>" class="photo-image">
                    <% } else if (post.type === 'video') { %>
                        <video src="/uploads/<%= post.filename %>" class="photo-image" controls></video>
                    <% } %>

                    <% if (post.caption) { %>
                        <div class="photo-caption"><%= post.caption %></div>
                    <% } %>

                    <div class="photo-actions">
                        <button class="action-btn like-btn" data-post-id="<%= post.id %>" data-type="<%= post.type %>">
                            <span>‚ù§Ô∏è</span>
                            <span class="like-count"><%= post.likes || 0 %> likes</span>
                        </button>
                        <button class="action-btn comment-btn-open">
                            <span>üí¨</span>
                            <span>Comment</span>
                        </button>
                    </div>

                    <div class="comments-section" style="display: none;">
                        <div class="comments-list"></div>
                        <div class="comment-form">
                            <input type="text" class="comment-input" placeholder="Add a comment..." aria-label="Add a comment">
                            <button class="comment-btn">Post</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <script>
        // Load and display comments for a post
        async function loadComments(postId, type) {
            const endpointType = type === 'video' ? 'videos' : 'photos';
            try {
                const response = await fetch(`/api/${endpointType}/${postId}/comments`);
                const data = await response.json();
                return data.comments || [];
            } catch (err) {
                console.error('Error loading comments:', err);
                return [];
            }
        }

        // Render comments in the UI
        async function renderComments(feedItem) {
            const postId = feedItem.dataset.postId;
            const type = feedItem.dataset.type;
            const commentsList = feedItem.querySelector('.comments-list');
            const comments = await loadComments(postId, type);
            
            commentsList.innerHTML = comments.map(c => `
                <div class="comment-item" style="padding:8px 0;border-bottom:1px solid var(--border);font-size:0.9rem">
                    <strong>${c.displayName || c.username}</strong>
                    <span style="color:var(--muted)">@${c.username}</span>
                    <p style="margin:4px 0 0 0;color:var(--text)">${c.text}</p>
                </div>
            `).join('');
        }

        // Initialize posts
        document.querySelectorAll('.feed-item').forEach(feedItem => {
            // Load comments when section opens
            const commentBtn = feedItem.querySelector('.comment-btn-open');
            commentBtn.addEventListener('click', async function() {
                const section = feedItem.querySelector('.comments-section');
                if (section.style.display === 'none') {
                    await renderComments(feedItem);
                }
                section.style.display = section.style.display === 'none' ? 'block' : 'none';
            });

            // Like button
            const likeBtn = feedItem.querySelector('.like-btn');
            likeBtn.addEventListener('click', async function() {
                const postId = this.dataset.postId;
                const type = this.dataset.type;
                const endpointType = type === 'video' ? 'videos' : 'photos';
                try {
                    console.log('[FEED] Liking', postId, 'type:', type);
                    const response = await fetch(`/api/${endpointType}/${postId}/like`, { 
                        method: 'POST',
                        headers: { 
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        }
                    });
                    
                    if (!response.ok) {
                        const errorText = await response.text();
                        console.error('[FEED] HTTP error:', response.status, errorText);
                        alert('Error: ' + (response.status === 401 ? 'Please log in' : 'Failed to like post'));
                        return;
                    }
                    
                    const data = await response.json();
                    console.log('[FEED] Like response:', data);
                    if (data.success) {
                        this.classList.toggle('liked');
                        this.querySelector('.like-count').textContent = data.likes + ' likes';
                    } else {
                        console.error('[FEED] Like failed:', data.error);
                        alert('Error: ' + (data.error || 'Like failed'));
                    }
                } catch (err) {
                    console.error('Error liking post:', err);
                    alert('Error liking post: ' + err.message);
                }
            });

            // Comment button
            const commentPostBtn = feedItem.querySelector('.comment-btn');
            commentPostBtn.addEventListener('click', async function() {
                const input = feedItem.querySelector('.comment-input');
                const text = input.value;
                if (!text.trim()) return;

                const postId = feedItem.dataset.postId;
                const type = feedItem.dataset.type;
                const endpointType = type === 'video' ? 'videos' : 'photos';
                try {
                    const response = await fetch(`/api/${endpointType}/${postId}/comment`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ text })
                    });

                    if (response.ok) {
                        input.value = '';
                        await renderComments(feedItem);
                    }
                } catch (err) {
                    console.error('Error posting comment:', err);
                }
            });
        });
    </script>
    <script src="/js/theme-toggle.js"></script>
</body>
</html>
